      <script>
        function isMobileDevice() {
            return /Mobi|Android|iPhone/i.test(navigator.userAgent);
        }
    
        window.onload = function() {
            if (isMobileDevice()) {
                document.getElementById('canvas1').style.display = 'none';
                document.getElementById('mobile-hero').style.display = 'block';
            } else {
                document.getElementById('canvas1').style.display = 'block';
                document.getElementById('mobile-hero').style.display = 'none';
                // Initialize canvas for desktop here
            }
        };
    </script>
      <script>
        document.querySelectorAll('.featurette').forEach(function(featurette) {
          featurette.addEventListener('touchstart', function() {
            this.classList.add('touch-active');
          });
          featurette.addEventListener('touchend', function() {
            setTimeout(() => {
              this.classList.remove('touch-active');
            }, 5000); // Keep the featurette content visible for 5 seconds
          });
        });
      </script>

