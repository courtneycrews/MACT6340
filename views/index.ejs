    }

    .featurette {
      position: relative;
      overflow: hidden;
      margin-bottom: 1.5rem;
    }

    .featurette .featurette-content {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.7);
      color: white;
      padding: 20px;
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }

    .featurette:hover .featurette-content,
    .featurette.touch-active .featurette-content {
      opacity: 1;
    }

    .featurette img {
      width: 100%;
      height: auto;
      display: block;
    }

    .grid-thumbnail img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .grid-caption {
      text-align: left;
      position: static;
      color: #000;
