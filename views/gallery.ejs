<!DOCTYPE html>
<html lang="en">
    
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <meta name="author" content="Courtney Crews">
  <meta name="description" content="A personal NFT mint.">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Antic+Didone&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" type="image/x-icon" href="./images/favicon.png">

  <title>gallery - c.m. crews</title>

    <style>
    html, body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
    
    * {
        box-sizing: border-box;
    }

    .eth-price {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .mint-count {
        font-size: 12px;
        color: var(--color-secondary);
    }

    @media (max-width: 768px) {
    .gallery-container {
      display: block;
      flex-direction: column;
      align-items: center;
      width: 100%;
      max-width: 500px; /* Standard max-width */
      height: auto;
      min-height: 70vh;
      max-height: none;
      overflow-y: visible;
      padding: 35px; /* Consistent padding */
      position: relative;
    }

    .gallery-grid {
        position: relative;
        display: flex;
        flex-direction: column;
        width: 100%;
        height: auto;
        margin-bottom: 30px; /* Increase space between slides on mobile */
    }

    .gallery-card {
        flex-direction: column;
        width: 100%;
        transition: none;
    }

    .gallery-card:hover {
        transform: none;
    }

    .gallery-card img {
        width: 100%;
        height: auto;
        margin-bottom: 10px; /* Creates spacing like the homepage */
    }

    .gallery-info {
        text-align: left;
        padding: 20px 10px;
    }

    .gallery-title {
        font-size: 18px;
    }

    .gallery-description {
        font-size: 14px;
        opacity: 0.8;
    }

    .eth-price {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .mint-count {
        font-size: 14px;
        color: var(--color-secondary);
    }
}
    </style>
</head>

<body>
    <div class="navbar navbar-expand-lg">
      <%- include('header'); %>
    </div>
  
    <section class="gallery-container">
        <div class="gallery-grid">
          <% projectArray.forEach((project, index) => { %>
            <div class="gallery-card">
              <a href="/artwork/<%= project.id %>">
                <img src="<%= project.img_url %>" alt="<%= project.project_name %>">
              </a>
              <div class="gallery-info">
                <h2 class="gallery-title">
                  <a href="/artwork/<%= project.id %>" class="artwork-title-link">
                    <%= project.project_name %>
                  </a>
                </h2>
                <p class="gallery-description"><%= project.project_description %></p>
                <div class="eth-price">
                  <img src="/images/icons8-ethereum-logo.svg" alt="Ethereum Logo" class="eth-logo" width="16">
                  <span class="eth-amount"><%= project.price_eth %> ETH</span>
                </div>
                <p class="mint-count">Minted: <%= project.minted_count || 0 %> / <%= project.total_supply || "âˆž" %></p>
                <a href="/artwork/<%= project.id %>" class="custom-button">View Artwork</a>
              </div>
            </div>
          <% }) %>
        </div>
    </section>
  
    <footer class="footer-container">
      <%- include('footer'); %>
    </footer>
  
    <script type="module" src="/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  </body>
  
  </html>
